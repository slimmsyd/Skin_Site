{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_|^useEffect$|^addDays$|^isBefore$|^addMinutes$|^fromZonedTime$|^serviceDuration$|^getDurationMinutes$",
        "ignoreRestSiblings": true
      }
    ]
  }
} 